{
  "name": "neuroblox",
  "version": "1.0.0",
  "description": "Visual drag-and-drop neural network builder with PyTorch code generation. Build, train and test neural networks with sequential blocks",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder"
  },
  "keywords": [
    "neural-network",
    "blockly",
    "pytorch",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "blockly": "^11.0.0"
  },
  "build": {
    "productName": "Neuroblox",
    "files": [
      "**/*",
      "!resources/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "resources/server${exe}", 
        "to": "server${exe}"
      },
      {
        "from": "resources/generator${exe}",
        "to": "generator${exe}"
      }
    ]
  }
}
